	if ($newsletter_id_historico > 0 && $codigo != '') {
		$links = preg_replace_callback('~<a\s+href="(.*?)"(.*?)>(.*?)</a>~i', function ($res) use (&$texto, $newsletter_id_historico, $codigo) {
